<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="com.example.cs210battlemocks.Battle1v2Controller"
            prefWidth="800" prefHeight="600"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1">

    <!-- =================== CENTER BATTLE AREA =================== -->
    <center>
        <AnchorPane fx:id="root" prefWidth="800" prefHeight="400">
            <children>

                <!-- Background Panel -->
                <Pane layoutY="242.0" prefHeight="185.0" prefWidth="800.0"
                      style="-fx-background-color: grey;" />

                <!-- =========== ENEMY 1 =========== -->
                <Pane layoutX="539.0" layoutY="123.0" prefHeight="158.0" prefWidth="95.0"
                      style="-fx-background-color: lightcoral;" />

                <VBox layoutX="537.0" layoutY="70.0" prefHeight="56.0" prefWidth="100.0">
                    <children>
                        <ProgressBar fx:id="enemyHP2" prefWidth="200.0" progress="1.0"
                                     style="-fx-accent: red;" />
                    </children>
                </VBox>

                <!-- =========== ENEMY 2 =========== -->
                <Pane layoutX="668.0" layoutY="174.0" prefHeight="158.0" prefWidth="95.0"
                      style="-fx-background-color: firebrick;" />

                <VBox layoutX="665.0" layoutY="118.0" prefHeight="56.0" prefWidth="100.0">
                    <children>
                        <ProgressBar fx:id="enemyHP1" prefWidth="200.0" progress="1.0"
                                     style="-fx-accent: red;" />
                    </children>
                </VBox>

                <!-- =========== PLAYER PANEL =========== -->
                <Pane layoutX="85.0" layoutY="186.0" prefHeight="135.0" prefWidth="68.0"
                      style="-fx-background-color: lightgreen;" />

                <VBox layoutX="69.0" layoutY="137.0" prefHeight="55.0" prefWidth="100.0">
                    <children>
                        <ProgressBar fx:id="playerHP1" prefWidth="200.0" progress="1.0"
                                     style="-fx-accent: green;" />
                        <ProgressBar fx:id="playerHP2" prefWidth="200.0" progress="1.0"
                                     style="-fx-accent: cyan;" />
                    </children>
                </VBox>

            </children>
        </AnchorPane>
    </center>

    <!-- =================== MENU BUTTON AREA =================== -->
    <bottom>
        <HBox spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>


            <!-- Menu Buttons -->
            <VBox spacing="10">
                <Button fx:id="attackButton" text="Attack" onAction="#onAction"/>
                <Button fx:id="abilityButton" text="Ability" onAction="#onAction"/>
                <Button fx:id="itemButton" text="Item" onAction="#onAction"/>
                <Button fx:id="fleeButton" text="Flee" onAction="#onAction"/>
            </VBox>

            <!-- Menu Label -->
            <VBox spacing="10">
                <Label fx:id="menuLabel" text="MENU" underline="true">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
            </VBox>

        </HBox>
    </bottom>

</BorderPane>
